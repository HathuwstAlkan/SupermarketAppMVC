<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Forgot Password - Supermarket MVC</title>
</head>
<body class="d-flex flex-column min-vh-100">
  <%- include('partials/navbar') %>
  
  <div class="container mt-5 mb-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
          <div class="card-body p-4">
            <h3 class="card-title text-center mb-4">Forgot Password?</h3>
            <p class="text-muted text-center mb-4">Enter your email address and we'll send you a code to reset your password.</p>
            
            <form id="forgot-password-form">
              <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" required placeholder="your@email.com">
              </div>
              
              <button type="submit" class="btn btn-primary w-100" id="submit-btn">
                <span id="btn-text">Send Reset Code</span>
                <span id="btn-spinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
              </button>
            </form>

            <!-- Mock Email Display (shows after request) -->
            <div id="mock-email-display" class="mt-4" style="display:none;">
              <div class="alert alert-success">
                <i class="fa fa-check-circle"></i> Reset code sent! Check below:
              </div>
              
              <div class="mock-email-container">
                <div class="mock-email-header">
                  <div class="mb-1"><strong>From:</strong> <span id="email-from"></span></div>
                  <div class="mb-1"><strong>To:</strong> <span id="email-to"></span></div>
                  <div class="mb-2"><strong>Subject:</strong> <span id="email-subject"></span></div>
                </div>
                <div class="mock-email-body" id="email-body"></div>
                <div class="mt-3">
                  <label class="form-label fw-bold">Your Reset Code:</label>
                  <input type="text" class="form-control otp-code-display" id="otp-display" readonly>
                  <small class="text-muted">Expires: <span id="email-expires"></span></small>
                </div>
              </div>

              <a href="/reset-password" class="btn btn-warning w-100 mt-3">
                Continue to Reset Password â†’
              </a>
            </div>

            <div class="text-center mt-3">
              <a href="/login" class="text-muted">Back to Login</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script>
    document.getElementById('forgot-password-form').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const email = document.getElementById('email').value;
      const submitBtn = document.getElementById('submit-btn');
      const btnText = document.getElementById('btn-text');
      const btnSpinner = document.getElementById('btn-spinner');
      
      // Show loading state
      submitBtn.disabled = true;
      btnText.classList.add('d-none');
      btnSpinner.classList.remove('d-none');
      
      try {
        const response = await fetch('/auth/forgot-password', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email })
        });
        
        const data = await response.json();
        
        if (data.success && data.mockEmail) {
          // Display mock email
          document.getElementById('email-from').textContent = data.mockEmail.from;
          document.getElementById('email-to').textContent = data.mockEmail.to;
          document.getElementById('email-subject').textContent = data.mockEmail.subject;
          document.getElementById('email-body').textContent = data.mockEmail.body;
          document.getElementById('otp-display').value = data.mockEmail.otp;
          document.getElementById('email-expires').textContent = new Date(data.mockEmail.expiresAt).toLocaleString();
          
          document.getElementById('mock-email-display').style.display = 'block';
          document.getElementById('forgot-password-form').style.display = 'none';
        } else {
          alert(data.message || 'If this email exists, a reset code has been sent.');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Failed to send reset code. Please try again.');
      } finally {
        // Reset button state
        submitBtn.disabled = false;
        btnText.classList.remove('d-none');
        btnSpinner.classList.add('d-none');
      }
    });
  </script>
</body>
</html>
