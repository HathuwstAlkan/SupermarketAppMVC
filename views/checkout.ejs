<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Checkout - Supermarket App</title>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <h2>Checkout</h2>

    <% if (!cart || cart.length === 0) { %>
      <p>Your cart is empty.</p>
      <a href="/shopping" class="btn btn-secondary">Continue Shopping</a>
    <% } else { %>
      <table class="table">
        <thead>
          <tr><th>Product</th><th>Qty</th><th>Price</th><th>Subtotal</th></tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% cart.forEach(item => { %>
            <tr>
              <td><%= item.productName %></td>
              <td><%= item.quantity %></td>
              <td>$<%= item.price.toFixed(2) %></td>
              <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
            </tr>
            <% total += item.price * item.quantity; %>
          <% }); %>
        </tbody>
      </table>

      <h4>Total: $<%= total.toFixed(2) %></h4>

      <% if (flash.error && flash.error.length) { %>
        <% flash.error.forEach(e => { %>
          <div class="alert alert-danger"><%= e %></div>
        <% }); %>
      <% } %>
      <% if (flash.success && flash.success.length) { %>
        <% flash.success.forEach(m => { %>
          <div class="alert alert-success"><%= m %></div>
        <% }); %>
      <% } %>

      <form action="/checkout" method="POST" class="checkout-form">
        <div class="mb-3">
          <label class="form-label">Recipient name</label>
          <input class="form-control" name="recipient_name" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Address line 1</label>
          <input class="form-control" name="address_line1" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Payment method</label>
          <select name="method" class="form-control">
            <option value="mock">Mock (test)</option>
            <option value="card">Card (mock)</option>
            <option value="qr">QR (mock)</option>
          </select>
        </div>

        <button class="btn btn-primary" type="submit">Pay (mock)</button>
      </form>
    <% } %>
  </div>
  <script src="/js/ui.js"></script>
</body>
</html>
