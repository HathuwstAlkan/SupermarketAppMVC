<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Your Cart - Supermarket MVC</title>
</head>
<body>
  <%- include('partials/navbar') %>
  <!-- Cart Content -->
  <div class="container">
    <h2 class="mt-4">Shopping Cart</h2>
    <!-- flashes are rendered centrally by partials/flashes.ejs -->
    <% if (cart.length === 0) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < cart.length; i++) { %>
            <tr>
                <td><%= cart[i].productName %></td>
                <td><img src="/images/<%= cart[i].image ? 'products/' + cart[i].image : 'misc/no-image.svg' %>" width="80" class="img-thumbnail"></td>
                <td><%= cart[i].quantity %></td>
                <td>$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
            </tr>
            <% total += cart[i].price * cart[i].quantity; %>
          <% }; %>
        </tbody>
      </table>
      <h4>Total: $<%= total.toFixed(2) %></h4>

      <div class="mt-4">
        <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>
        <form action="/cart/clear" method="POST" style="display:inline-block; margin-left:8px;">
          <button class="btn btn-outline-danger">Clear Cart</button>
        </form>
      </div>
    <% } %>
  </div>
  <script src="/js/ui.js"></script>
</body>
</html>
