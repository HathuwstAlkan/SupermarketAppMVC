<div class="product-card card">
  <div class="card-img-top position-relative">
    <img src="/images/<%= product.image || 'default-avatar.svg' %>" class="img-fluid" alt="<%= product.productName %>" style="height:160px;object-fit:cover;">
    <div class="product-actions position-absolute top-0 end-0 m-2 d-flex gap-1">
      <a href="/product/<%= product.id %>" class="btn btn-sm btn-light" title="View"><i class="fa fa-eye"></i></a>
      <form action="/add-to-cart/<%= product.id %>" method="POST" class="d-inline">
        <input type="hidden" name="quantity" value="1">
        <button class="btn btn-sm btn-primary" title="Add to cart"><i class="fa fa-shopping-cart"></i></button>
      </form>
    </div>
  </div>
  <div class="card-body p-2">
    <h6 class="card-title mb-1"><%= product.productName %></h6>
    <div class="d-flex justify-content-between align-items-center">
      <small class="text-muted">$<%= Number(product.price).toFixed(2) %></small>
      <small class="text-muted">Avail: <%= product.available || 0 %></small>
    </div>
  </div>
</div>
