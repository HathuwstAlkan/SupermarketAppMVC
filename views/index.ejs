<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Supermarket App</title>
  <style>/* small landing tweaks */
    .carousel-caption h5{font-weight:800}
  </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <%- include('partials/navbar') %>

    <% if (featured && featured.length) { %>
      <div class="container mt-4">
        <div id="featuredCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% featured.forEach((p, idx) => { %>
              <div class="carousel-item <%= idx === 0 ? 'active' : '' %>">
                <a href="/product/<%= p.id %>">
                  <img src="/images/<%= p.image ? 'products/' + p.image : 'misc/no-image.svg' %>" class="d-block w-100" alt="<%= p.productName %>" style="height:320px;object-fit:cover;">
                </a>
                <div class="carousel-caption d-none d-md-block text-start" style="background:rgba(0,0,0,0.25);border-radius:8px;left:10%;right:60%;padding:1rem;">
                  <h5><%= p.productName %> <span class="badge bg-warning text-dark"><%= p.deal ? 'Deal' : 'Featured' %></span></h5>
                  <p class="mb-0">$<%= Number(p.price || 0).toFixed(2) %> â€” <%= p.category || '' %></p>
                </div>
              </div>
            <% }) %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    <% } %>

    <div class="container app-main">
      <p style="text-align: center;">
            <% if (user) {%>
              <% if (user.role === "admin") { %>
                <br>
                Back to <a href="/inventory">inventory!</a>
              <% } else { %>
                <br>
                Continue <a href="/shopping">Shopping!</a>
                <% } %>
            <% } else { %>
            <br>
            Welcome to supermarket app! <br>
            Please <a href = "/login" >login</a> to continue...
            <% } %>
        </p>
        
    </div>
    <%- include('partials/footer') %>

    <script>
      (function(){
        try {
          const mode = <%- JSON.stringify(typeof mode !== 'undefined' ? mode : null) %>;
          if (mode === 'login') {
            const el = document.getElementById('loginModal'); if (el) new bootstrap.Modal(el).show();
          } else if (mode === 'register') {
            const el = document.getElementById('registerModal'); if (el) new bootstrap.Modal(el).show();
          }
        } catch(e){}
      })();
    </script>
</body>
</html>