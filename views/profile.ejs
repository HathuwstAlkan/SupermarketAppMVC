<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Profile Settings</title>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <h2>Profile Settings</h2>
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <div class="card-body text-center">
            <% const avatar = user && user.avatar ? user.avatar : 'default-avatar.svg'; %>
            <form id="avatarForm" action="/profile" method="POST" enctype="multipart/form-data">
              <div class="avatar-wrapper mx-auto mb-3" style="width:120px; height:120px;">
                <img id="profileAvatar" src="/images/<%= avatar %>" class="rounded-circle" width="120" height="120" style="object-fit:cover;">
                <label for="avatarInput" class="avatar-edit" title="Edit avatar">
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                </label>
                <input id="avatarInput" name="avatar" type="file" accept="image/*" style="display:none">
              </div>
            </form>
            <h5><%= user.username %></h5>
            <p class="text-muted"><%= user.email %></p>
          </div>
        </div>
      </div>
      <div class="col-md-8">
          <form id="profileForm" action="/profile" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="username" class="form-label">Display name</label>
            <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>">
          </div>
          <div class="mb-3">
            <label for="address" class="form-label">Delivery address</label>
            <textarea id="address" name="address" class="form-control"><%= user.address || '' %></textarea>
          </div>
          <div class="mb-3">
            <label for="contact" class="form-label">Contact</label>
            <input id="contact" name="contact" class="form-control" value="<%= user.contact || '' %>">
          </div>
          <!-- avatar is uploaded via the avatar overlay in the left column -->

          <div class="mb-3">
            <label for="payment" class="form-label">Primary payment method (placeholder)</label>
            <select id="payment" name="payment" class="form-select">
              <option value="mock" selected>Mock Card</option>
              <option value="card">Card (add in future)</option>
              <option value="qr">QR</option>
            </select>
          </div>

          <button type="submit" class="btn btn-primary">Save profile</button>
          <a href="/logout" class="btn btn-link text-danger">Logout</a>
        </form>
      </div>
    </div>
  </div>

    <script src="/js/profile.js"></script>
    <%- include('partials/footer') %>
</body>
</html>
