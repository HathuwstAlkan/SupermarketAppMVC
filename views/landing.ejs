<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Welcome - Supermarket App</title>
  <style>
    /* Simple landing layout tweaks */
    .auth-shell { display:flex; gap:2rem; align-items:center; justify-content:center; padding:4rem 1rem; }
    .auth-card { width:480px; max-width:90%; padding:2rem; border-radius:12px; box-shadow:0 10px 30px rgba(0,0,0,0.06); background:rgba(255,255,255,0.98); }
    .auth-side { width:360px; max-width:30%; padding:2rem; text-align:center; }
    .mode-toggle { cursor:pointer; color:var(--teal); font-weight:600; }
    .hidden { display:none; }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container auth-shell">
    <div class="auth-card">
      <h3 id="form-title">Login</h3>

      <!-- flashes are centralized in partials/flashes.ejs -->

      <form id="auth-login-form" action="/login" method="POST">
        <div class="mb-3">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" required value="<%= formData && formData.email ? formData.email : '' %>">
        </div>
        <div class="mb-3">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" required>
        </div>
        <button class="btn btn-primary w-100" type="submit">Login</button>
      </form>

      <form id="auth-register-form" action="/register" method="POST" class="hidden mt-3">
        <div class="mb-3">
          <label for="username">Username</label>
          <input id="username" name="username" class="form-control" value="<%= formData && formData.username ? formData.username : '' %>">
        </div>
        <div class="mb-3">
          <label for="r-email">Email</label>
          <input type="email" id="r-email" name="email" class="form-control" value="<%= formData && formData.email ? formData.email : '' %>">
        </div>
        <div class="mb-3">
          <label for="r-password">Password</label>
          <input type="password" id="r-password" name="password" class="form-control">
        </div>
        <div class="mb-3">
          <label for="address">Address</label>
          <input id="address" name="address" class="form-control" value="<%= formData && formData.address ? formData.address : '' %>">
        </div>
        <div class="mb-3">
          <label for="contact">Contact</label>
          <input id="contact" name="contact" class="form-control" value="<%= formData && formData.contact ? formData.contact : '' %>">
        </div>
        <div class="mb-3">
          <label for="role">Role</label>
          <select id="role" name="role" class="form-select">
            <option value="user" selected>User</option>
            <option value="admin">Admin</option>
          </select>
        </div>
        <button class="btn btn-primary w-100" type="submit">Register</button>
      </form>

      <div class="mt-3 text-center">
        <small>Want to <span id="toggle-mode" class="mode-toggle">create an account</span> instead?</small>
      </div>
    </div>

    <div class="auth-side d-none d-md-block">
      <h2>Welcome to Supermarket</h2>
      <p class="text-muted">Sign in to browse products, add to cart and checkout. New here? Create an account to save orders and manage profile.</p>
      <img src="/images/default-avatar.svg" alt="hero" style="width:120px;margin-top:1rem;opacity:0.9">
    </div>
  </div>

  <script>
    (function(){
      const loginForm = document.getElementById('auth-login-form');
      const regForm = document.getElementById('auth-register-form');
      const toggle = document.getElementById('toggle-mode');
      const title = document.getElementById('form-title');
      let mode = '<%= typeof mode !== "undefined" ? mode : "login" %>';
      function setMode(m) {
        mode = m;
        if (m === 'login') {
          loginForm.classList.remove('hidden');
          regForm.classList.add('hidden');
          title.textContent = 'Login';
          toggle.textContent = 'create an account';
        } else {
          loginForm.classList.add('hidden');
          regForm.classList.remove('hidden');
          title.textContent = 'Register';
          toggle.textContent = 'sign in';
        }
      }
      toggle.addEventListener('click', () => setMode(mode === 'login' ? 'register' : 'login'));
      setMode(mode);
    })();
  </script>

  <script src="/js/landing.js"></script>

  <%- include('partials/footer') %>
</body>
</html>
